#!/bin/bash

format-to-time() {
  minutes=$(printf "%02d" $1)
  seconds=$(printf "%02d" $2)
  echo "$minutes:$seconds"
}

start() {
  pomodoro_timer=30
  if [[ $@ == *"--long"* ]]; then pomodoro_timer=45; fi
  for (( i = $pomodoro_timer; i > 0; i--)); do
    for (( j = 59; j > 0; j--)); do
      xsetroot -name "$i:$j"
      sleep 1s
    done
  done
}

"$@"
